<div class="row">
  <!-- Welcome screen -->
  <div class="col-sm-4">
    <!-- ko if: !needName() -->
    <form data-bind="submit: enter">
      <p>
        <input class="name-input" type="text" placeholder="Name" data-bind="textInput: playerName" maxlength="30" />
      </p>
      <p>
        <button class="btn btn-default" type="submit"
          data-bind="enable: playerName() && !disableSubmitButton(), text: disableSubmitButton() ? 'Loading...' : 'Enter the arena'">
          Тоглоомын өрөөнд нэгдэх
        </button>
      </p>
    </form>
    <!-- /ko -->
    <!-- ko if: needName() -->
    <p>
      Нэвтрэхийн тулд тоглогч нэртэй байх ёстой.
      <span data-bind="text: currentGame()"></span>
    </p>
    <form data-bind="submit: join.bind(null, null, null, currentGame())">
      <p>
        <input class="name-input" type="text" placeholder="Name" data-bind="textInput: playerName" maxlength="30" />
      </p>
      <p>
        <button class="btn btn-default" type="submit" data-bind="enable: playerName">
          Тоглолтод нэгдэх
        </button>
      </p>
    </form>
    <!-- /ko -->
    <p><a href="rules.html" target="blank">Тоглоомын заавар</a></p>
  </div>
</div>